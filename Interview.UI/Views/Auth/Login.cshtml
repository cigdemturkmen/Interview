@model Interview.UI.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Hoşgeldiniz!</h1>
    </div>
    <form class="user" asp-controller="auth" asp-action="login" method="post" asp-antiforgery="true">
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control form-control-user" aria-describedby="emailHelp"
                   placeholder="Enter Email Address...">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Şifre">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-user btn-block">
            Giriş
        </button>
    </form>
    <hr>
    <div class="text-center">
        <a class="small" href="/auth/register">Hemen Kaydolun!</a>
    </div>
</div>

